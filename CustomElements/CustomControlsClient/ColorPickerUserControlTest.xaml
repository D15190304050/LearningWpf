<Window x:Class="CustomElements.CustomControlsClient.ColorPickerUserControlTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomElements.CustomControlsClient"
        mc:Ignorable="d"
        xmlns:lib="clr-namespace:CustomElements.CustomControls"
        Title="ColorPickerUserControlTest" Height="300" Width="300">
    <StackPanel>
        <lib:ColorPickerUserControl x:Name="colorPicker" Margin="2" Padding="3" ColorChanged="colorPicker_ColorChanged" Color="Yellow" />

        <Button Click="cmdGet_Click" Margin="5,20,5,0" Padding="2">Get Color</Button>
        <Button Click="cmdReset_Click" Margin="5,0,5,0" Padding="2">Reset Color</Button>
        <Button Command="ApplicationCommands.Undo" CommandTarget="{Binding ElementName=colorPicker}" Margin="5,0,5,0" Padding="2">Undo</Button>
        
        <TextBlock Name="lblColor" Margin="10" />
    </StackPanel>
</Window>
