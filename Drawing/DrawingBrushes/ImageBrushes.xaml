<Window x:Class="Drawing.ImageBrushes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drawing"
        mc:Ignorable="d"
        Title="ImageBrushes" Height="450" Width="400">
    <Canvas>
        <Rectangle Canvas.Left="10" Canvas.Top="10" Width="280" Height="120" Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush ImageSource="../Images/logo.gif" Stretch="None" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Canvas.Left="10" Canvas.Top="140" Width="200" Height="200" Stroke="Black">
            <Rectangle.Fill>
                <ImageBrush ImageSource="../Images/logo.gif" Stretch="Uniform" Viewbox="0.4,0.5 0.2,0.2" />
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>
</Window>
