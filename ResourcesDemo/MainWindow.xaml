<Window x:Class="ResourcesDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcesDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="375" Width="500">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="5" Button.Click="CreateWindow">
            <Button>StaticResourcesDemo</Button>
            <Button>DynamicResourcesDemo</Button>
        </StackPanel>
    </Grid>
</Window>
