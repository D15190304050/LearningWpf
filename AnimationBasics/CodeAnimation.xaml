<Window x:Class="AnimationBasics.CodeAnimation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationBasics"
        mc:Ignorable="d"
        Title="CodeAnimation" Height="390" Width="400">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Name="cmdGrow" Click="cmdGrow_Click" Height="40" Width="160">Click and Make Me Grow</Button>
        <Button Grid.Row="1" Name="cmdShrink" Click="cmdShrink_Click">Shrink It Back</Button>
        <Button Grid.Row="2" Name="cmdGrowIncrementally" Click="cmdGrowIncrementally_Click" Width="240">
            Click and Make Me Grow (Incrementally)
        </Button>
    </Grid>
</Window>
