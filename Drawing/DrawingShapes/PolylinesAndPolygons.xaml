<Window x:Class="Drawing.PolylinesAndPolygons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drawing"
        mc:Ignorable="d"
        Title="PolylinesAndPoligons" Height="600" Width="400">
    <Canvas>
        <Polyline Stroke="Blue" StrokeThickness="5"
                  Points="10,150 30,40 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" />
        <Polygon Stroke="Blue" StrokeThickness="5" Canvas.Top="200"
                 Points="10,150 30,40 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240" />
    </Canvas>
</Window>
