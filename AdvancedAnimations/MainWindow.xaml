<Window x:Class="AdvancedAnimations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedAnimations"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Button.Click="ButtonClick">
            <Button>RotateButton</Button>
            <Button>RotateButtonWithLayout</Button>
            <Button>ExpandElement</Button>
            <Button>AnimateRadialGradient</Button>
            <Button>AnimateVisual</Button>
            <Button>BlurringButtons</Button>
            <Button>ExpandExample2</Button>
            <Button>KeySplineAnimation</Button>
            <Button>PathBasedAnimation</Button>
            <Button>FrameBasedAnimation</Button>
            <Button>BombDropper</Button>
        </StackPanel>
    </Grid>
</Window>
