<Window x:Class="AdvancedAnimations.FrameBasedAnimation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedAnimations"
        mc:Ignorable="d"
        Title="FrameBasedAnimation" Height="400" Width="500">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="cmdStart" Margin="3" Padding="3" Click="cmdStart_Click">Start</Button>
            <Button Name="cmdStop" Margin="3" Padding="3" Click="cmdStop_Click">Stop</Button>
        </StackPanel>

        <Canvas Name="canvas" Grid.Row="1" Margin="3"/>
    </Grid>
</Window>
