<Window x:Class="PlotSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotSharp"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">


    <Grid Margin="5">
        <Canvas Name="canvas" Margin="5">
            <Line X1="0" Y1="{Binding ElementName=canvas, Path=ActualHeight}"
                  X2="{Binding ElementName=canvas, Path=ActualWidth}" Y2="0"
                  StrokeThickness="4" Stroke="Black" />
        </Canvas>
    </Grid>
</Window>
