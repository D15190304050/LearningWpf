<Window x:Class="CustomElements.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomElements"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="5" Button.Click="ButtonClick">
            <Button>ColorPickerUserControlTest</Button>
            <Button>ColorPickerTwoWays</Button>
            <Button>FlipPanelTest</Button>
            <Button>FlipPanelAlternateTemplate</Button>
            <Button>MaskedTextBoxTest</Button>
            <Button>WrapBreakPanel</Button>
            <Button>CustomDrawnElementTest</Button>
            <Button>CustomDrawnElementChrome</Button>
        </StackPanel>
    </Grid>
</Window>
