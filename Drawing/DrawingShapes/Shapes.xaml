<Window x:Class="Drawing.Shapes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drawing"
        mc:Ignorable="d"
        Title="Shapes" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Ellipse Fill="Yellow" Stroke="Blue" Width="100" Height="50" Margin="5" HorizontalAlignment="Left" />
            <Rectangle Fill="Yellow" Stroke="Blue" Width="100" Height="50" Margin="5" HorizontalAlignment="Left" />
        </StackPanel>

        <Canvas Grid.Row="1">
            <Ellipse Fill="Yellow" Stroke="Blue" Width="100" Height="50" Canvas.Left="100" Canvas.Top="50" />
            <Rectangle Fill="Yellow" Stroke="Blue" Width="100" Height="50" Canvas.Left="30" Canvas.Top="40" />
        </Canvas>
    </Grid>
</Window>
